
    <div class="container">
    	<div class="row mt-4">

    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Reset your password</h1>

    {{ form_start(requestForm) }}
        <div class="form-group col-md-8 mt-4">
			{{ form_label(requestForm.email) }}
			{{ form_widget(requestForm.email) }}
			<div class="form-error">
				{{ form_errors(requestForm.email) }}
			</div>
		</div>
        <div>
            <small>
                Enter your email address, and we will send you a
                link to reset your password.
            </small>
        </div>
                <div class="form-group col-md-8 mt-2">
        <button class="btn btn-info btn-sm rounded-pill px-3 mt-4 float-end">Send password reset email</button>
        </div>
    {{ form_end(requestForm) }}
    </div>
    </div>

